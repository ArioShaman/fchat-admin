{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fchat-admin/data-access": ["libs/data-access/src/index.ts"],
      "@fchat-admin/entities": ["libs/entities/src/index.ts"],
      "@fchat-admin/features": ["libs/features/src/index.ts"],
      "@fchat-admin/shared": ["libs/shared/src/index.ts"],
      "@fchat-admin/types": ["libs/types/src/index.ts"],
      "@fchat-admin/widgets": ["libs/widgets/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
